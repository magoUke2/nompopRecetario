<div class="container p-4">
    <div class="row">
        <div class="col md 4 mx-auto">
            <div class="card">
                <div class="card-body  bg-dark text-light">
                    <form action="/recetas/edit/{{recipes.recipe_id}}" method="POST">

                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="receta" id="name" value="{{recipes.recipename}}"
                                    placeholder="Nombre de la receta" autofocus>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">Descripcion</label>
                            <div class="col-sm-10">
                                <input type="textarea" class="form-control" aria-label="Descripcion" name="descripcion"
                                    id="descripcion" value="{{recipes.description}}"></textarea>
                            </div>
                        </div>
                        <div id="ingredientIncrease">
                            {{#each ingredients}}
                            <div class="form-group row">
                                <label for="medida" class="col-sm-2 col-form-label">Ingrediente</label>
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <select class="custom-select" name="ingrediente" onchange="funcion2()">
                                            <option value="{{id}}">{{ingrediente}} - {{medida}}</option>
                                        </select>
                                        <input type="text" class="form-control mr-2" name="cantidad" value={{cantidad}} id="name"
                                            placeholder="Cantidad" autofocus>
                                        <select class="custom-select" name="obligatorio">
                                            <option hidden selected value>--Seleccione--</option>
                                            <option value="1">Obligatorio</option>
                                            <option value ="2">Opcional</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>



                        <script>
                            function myFunction() {
                                var container = document.getElementById("ingredientIncrease");

                                var div = document.createElement('div');
                                div.innerHTML = '<div class="form-group row"><label for="medida" class="col-sm-2 col-form-label">Ingrediente</label><div class="col-sm-10"><div class="input-group"><select class="custom-select" name="ingrediente" onchange="funcion2()"><option hidden selected value>--Seleccione--</option>{{#each links}}<option value="{{id}}">{{ingrediente}} - {{medida}}</option>{{/each}}</select><input type="text" class="form-control mr-2" name="cantidad" id="name"placeholder="Cantidad" autofocus><select class="custom-select" name="obligatorio"><option hidden selected value>--Seleccione--</option><option value="1">Obligatorio</option><option value="2">Opcional</option></select></div></div></div>';

                                container.appendChild(div);

                            }
                            function removeIngredient() {
                                var container = document.getElementById("ingredientIncrease");
                                container.removeChild(container.lastChild);
                            }
                            function funcion2() {

                            }

                        </script>

                        <div class="form-group row">

                            <div class="input-group-append">
                                <button id="add-more" name="add-more" class="btn btn-success btn-block mr-1"
                                    onclick="myFunction()" type="button">Agregar ingrediente</button>
                            </div>
                            <div class="input-group-append">
                                <button id="add-more" name="add-more" class="btn-danger btn-block"
                                    onclick="removeIngredient(this)" type="button">Remover ingrediente</button>
                            </div>
                        </div>



                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                    

                </div>
            </div>
        </div>
    </div>
</div>